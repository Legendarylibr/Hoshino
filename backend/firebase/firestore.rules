rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read their own conversations
    match /conversations/{conversationId} {
      allow read, write: if request.auth != null && 
        (request.auth.token.wallet_address == resource.data.userId || 
         request.auth.token.wallet_address == request.resource.data.userId);
    }
    
    // Allow users to read and write their own user data
    match /users/{walletAddress} {
      allow read, write: if request.auth != null && 
        request.auth.token.wallet_address == walletAddress;
    }
    
    // Allow users to read and write their own achievements
    match /user_achievements/{walletAddress} {
      allow read, write: if request.auth != null && 
        request.auth.token.wallet_address == walletAddress;
    }
    
    // Allow public read access to leaderboard
    match /leaderboard/{walletAddress} {
      allow read: if true;
      allow write: if request.auth != null && 
        request.auth.token.wallet_address == walletAddress;
    }
    
    // Allow public read access to global achievements
    match /achievements/{achievementId} {
      allow read: if true;
      allow write: if false; // Only admins can modify global achievements
    }
    
    // Allow public read access to global milestones
    match /milestones/{milestoneId} {
      allow read: if true;
      allow write: if false; // Only admins can modify global milestones
    }
    
    // Allow backend to read and write performance metrics
    match /performance_metrics/{metricId} {
      allow read: if true; // Public read access for monitoring
      allow write: if false; // Only backend functions can write (via admin SDK)
    }
  }
} 